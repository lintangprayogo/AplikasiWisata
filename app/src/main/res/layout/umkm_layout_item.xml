<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    card_view:cardBackgroundColor="#FFF"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_umkm"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_shop" />

        <TextView
            android:id="@+id/umkm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawablePadding="10dp"
            android:text="@string/umkm"
            android:textColor="#000000"
            android:textSize="20sp"
            card_view:layout_constraintStart_toEndOf="@+id/logo_umkm"
            card_view:layout_constraintTop_toTopOf="@id/logo_umkm"

            />

        <TextView
            android:id="@+id/umkm_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="5dp"
            android:textColor="#000"
            android:textSize="14sp"
            card_view:layout_constraintStart_toEndOf="@+id/logo_umkm"
            card_view:layout_constraintTop_toBottomOf="@id/umkm_name" />

        <TextView
            android:id="@+id/umkm_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="5dp"
            android:textColor="#000"
            android:textSize="14sp"
            card_view:layout_constraintStart_toEndOf="@+id/logo_umkm"
            card_view:layout_constraintTop_toBottomOf="@id/umkm_owner" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>